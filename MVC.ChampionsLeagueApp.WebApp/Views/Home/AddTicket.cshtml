@model MVC.ChampionsLeagueApp.ViewModels.Models.AddTicketViewModel

@{ ViewBag.Title = "Add Ticket"; }

<h1>Add ticket in the Buy Service</h1>

<form asp-controller="Home" asp-action="AddTicket" method="post">

    <label asp-for="MatchName"></label>
    <input asp-for="MatchName" /> <br />

    <label asp-for="Price"></label>
    <input asp-for="Price" /> <br />

    <label asp-for="Sector"></label>
    <select asp-for="Sector" asp-items="Html.GetEnumSelectList<MVC.ChampionsLeagueApp.DomainModels.Enums.SectorTicket>()"></select> 

    <br />
    <br />

    <button type="submit" class="btn btn-outline-success">Add Ticket</button>

</form>
