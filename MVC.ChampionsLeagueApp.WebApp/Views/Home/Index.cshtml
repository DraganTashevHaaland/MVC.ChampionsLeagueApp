@model MVC.ChampionsLeagueApp.ViewModels.Models.HomeViewModel

@{ ViewBag.Title = "Home"; }

<div class="jumbotron">

    <div class="display-4">Champions League App</div>
    <p class="lead">This is the oficial site for buying tickets</p>
    <hr class="my-4">

    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner carousel-custom">
            <div class="carousel-item active">
                <img src="~/images/tickets/AtalantaVsRealMadrid.png" class="d-block w-100 h-100" alt="...">
            </div>

            <div class="carousel-item">
                <img src="~/images/tickets/AtleticoMadridVsChelsea.png" class="d-block w-100 h-100" alt="...">
            </div>

            <div class="carousel-item">
                <img src="~/images/tickets/BarcelonaVsPsg.png" class="d-block w-100 h-100" alt="...">
            </div>

            <div class="carousel-item">
                <img src="~/images/tickets/GladbachVsManchesterCity.png" class="d-block w-100 h-100" alt="...">
            </div>

            <div class="carousel-item">
                <img src="~/images/tickets/LaipzigVsLiverpool.png" class="d-block w-100 h-100" alt="...">
            </div>

            <div class="carousel-item">
                <img src="~/images/tickets/LazioVsBayernMunich.png" class="d-block w-100 h-100" alt="...">
            </div>

            <div class="carousel-item">
                <img src="~/images/tickets/PortoVsJuventus.png" class="d-block w-100 h-100" alt="...">
            </div>

            <div class="carousel-item">
                <img src="~/images/tickets/SevillaVsBorussiaDortmund.png" class="d-block w-100 h-100" alt="...">
            </div>
        </div>
    </div>

    <hr class="my-4">

    <h3>Buy your ticket NOW!</h3>
    <form asp-controller="Home" asp-action="Index" method="post">
        <div class="row">
            <div class="col-md-2">
                <div class="input-group-btn">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-danger">Buy</button>
                    </span>
                    <input type="text" asp-for="NumberOfTickets" value="1" class="form-control" />
                </div>
            </div>
        </div>
    </form>

</div>